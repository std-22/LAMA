    <!--Для ввода числа-->

    <TextView
        android:id="@+id/number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_number"
        android:layout_marginTop="50dp"
        style="@style/Text"
        android:textColor="?attr/textViewColor"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/Matrix1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        android:textAlignment="center"
        android:visibility="gone"
        android:importantForAutofill="no"
        android:textColor="?attr/textViewColor"
        android:backgroundTint="?attr/textViewColor"
        tools:ignore="LabelFor"
        app:layout_constraintTop_toBottomOf="@+id/number_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--Button-->

    <Button
        android:id="@+id/to_input_matrix"
        android:layout_width="286dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/express_button"
        android:onClick="onClickToResult"
        android:text="@string/count"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />

