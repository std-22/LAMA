<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <!--Header-->

    <TextView
        android:id="@+id/function_name"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/name_of_function"
        android:layout_marginTop="44dp"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        android:textSize="38sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib"
        android:onClick="onClickIB"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_p1"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/express_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/e"
        tools:ignore="UsingOnClickInXml" />

    <!--Field-->

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/function_name">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultA6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultB6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultC6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultD6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultE6" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF1" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF2" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF3" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF4" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF5" />
            <TextView
                style="@style/result_view_cell"
                android:id="@+id/resultF6" />
        </TableRow>
    </TableLayout>

    <!--CheckBox-->

    <TextView
        android:id="@+id/rem_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="70dp"
        android:text="@string/memory_matrix"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/to_input_matrix"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="67dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rem_matrix"
        app:layout_constraintBottom_toTopOf="@+id/to_input_matrix"/>

    <!--Button-->

    <Button
        android:id="@+id/to_input_matrix"
        android:layout_width="506dp"
        android:layout_height="72dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/express_button"
        android:onClick="onClickToMenu"
        android:text="@string/back_to_menu"
        android:textAppearance="@style/Text"
        android:textColor="?attr/textViewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />

</androidx.constraintlayout.widget.ConstraintLayout>