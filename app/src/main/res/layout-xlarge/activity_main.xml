<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="562dp"
        android:layout_height="562dp"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/logo_new"
        android:contentDescription="@string/lama"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lama"
        android:layout_marginTop="-40dp"
        android:textAlignment="center"
        android:textSize="58.4sp"
        android:textAppearance="@style/Text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lin_al_amp"
        android:textAppearance="@style/Text"
        android:textSize="44sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/math_anal"
        android:textAppearance="@style/Text"
        android:textSize="44sp"/>

</LinearLayout>